@model List<ProductViewModel>
@{
    ViewData["Title"] = "مدیریت محصولات";
}


<h1 class="h1 text-primary">لیست محصولات</h1>
<hr class="" />
<table class="table table-striped table-info w-100">
    <thead>
        <tr>
            <th>شناسه</th>
            <th>عنوان</th>
            <th>قیمت</th>
            <th>موجودی</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Title</td>
                <td>@product.Price</td>
                <td>@product.Qty</td>
                <td>
                    <a class="btn btn-info" asp-area="">مشاهده جزئیات</a>
                    <a class="btn btn-warning" asp-area="">ویرایش</a>
                    <a class="btn btn-danger" asp-area="">حذف</a>
                </td>
            </tr>
        }

    </tbody>
</table>
