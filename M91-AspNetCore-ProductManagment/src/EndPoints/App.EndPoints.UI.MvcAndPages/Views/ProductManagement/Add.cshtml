@model Product

<div class="card">
    <h5 class="card-header">اضافه نمودن کلال جدید</h5>
    <div class="card-body">
        <form asp-controller="ProductManagement" asp-action="Add" method="post">
            
            <label for="Title" class="form-label">عنوان</label>
            <input class="form-control" asp-for="Title" />
            <br />

            <label class="form-label" asp-for="Price"></label>
            <input class="form-control" asp-for="Price" />
            <br />

            <label for="ProductCount" class="form-label">موجودی در انبار</label>
            <input class="form-control" asp-for="Qty" />
            <br />

            <input type="submit" class="btn btn-success float-left" value="ذخیره" />

            <a class="btn btn-light float-left"
               asp-controller="ProductManagement" asp-action="Index">بازگشت به لیست</a>
        </form>
    </div>
</div>
